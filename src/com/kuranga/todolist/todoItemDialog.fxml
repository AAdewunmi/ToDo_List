<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane fx:controller="com.kuranga.todolist.DialogController"
            xmlns:fx="http://javafx.com/fxml">
    <headerText>
        We could put instructions here!
    </headerText>
    <content>
       <GridPane vgap="10" hgap="10">
           <Label text="Short Descripion" GridPane.rowIndex="0" GridPane.columnIndex="0"></Label>
           <TextField GridPane.rowIndex="0" GridPane.columnIndex="1"></TextField>
           <Label text="Details: " GridPane.rowIndex="1" GridPane.columnIndex="0"></Label>
           <TextArea GridPane.rowIndex="1" GridPane.columnIndex="1"></TextArea>
           <Label text="Deadline: " GridPane.rowIndex="2" GridPane.columnIndex="0"></Label>
           <DatePicker GridPane.rowIndex="2" GridPane.columnIndex="1"></DatePicker>
       </GridPane>
    </content>
</DialogPane>
